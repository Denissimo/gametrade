{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Данные задачи
                </div>
                <div class="card-body">
                    {{ form(form_task_edit) }}
                </div>
            </div>
            {# {{ form(form_task_offer, {'method': 'POST', 'attr': {'class': 'inline_elem' }}) }} #}
            {# {{ form_start(form_task_offer, {'method': 'POST', 'attr': {'class': 'inline_elem' }}) }} #}
