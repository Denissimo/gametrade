{% extends 'games.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Данные аккаунта
                </div>
                <div class="card-body">
                    {{ form(form_account_edit) }}
                </div>
            </div>

        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    Учётные записи
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-striped">
                                {% include 'units/credential_operator.html.twig'  with {'account': account} %}
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    {% include 'operator_credential_add.html.twig' %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
